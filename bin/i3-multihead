#!/usr/bin/env bash

case "$1" in
    laptop)
        xrandr --output LVDS1 --auto --primary --output VGA1 --off
        kill -9 $(pidof polybar)
        polybar laptop
        nitrogen --restore
    ;;
    home)
        xrandr --output LVDS1 --auto --primary --output VGA1 --auto --above LVDS1	
        polybar monitor
        nitrogen --restore
    ;;
    tv)
        xrandr --output LVDS1 --auto --primary --output HDMI1 --auto --above LVDS1
        polybar monitor
        nitrogen --restore
    ;;
    projector)
        xrandr --output LVDS1 --auto --primary --output VGA1 --auto --same-as LVDS1
        nitrogen --restore
    ;;
esac

exit 0
