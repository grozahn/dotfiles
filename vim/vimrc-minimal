set nocompatible              " be iMproved, required
filetype off                  " required
filetype plugin on
filetype plugin indent on

" --Encoding--
set encoding=utf-8
set termencoding=utf-8

" --Mapping--
map <C-t> :tabnew<CR>
map <C-a> :tabNext<CR>
map <C-d> :tabclose<CR>

" --Tab key--
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab

" --Navigation--
set cursorline
set number

" --Color scheme--
syntax enable
colorscheme elflord
set background=dark
