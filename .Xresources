! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.color-enabled: true

! Property Name     BG       Border   Separator
rofi.color-window:  #1d1f21, #1d1f21, #373b41 
! Property Name     BG       FG       BG-alt   Head-BG  Head-FG
rofi.color-normal:  #1d1f21, #c5c8c6, #1d1f21, #81a2be, #1d1f21
rofi.color-active:  #1d1f21, #81a2be, #1d1f21, #81a2be, #1d1f21
rofi.color-urgent:  #1d1f21, #cc6666, #1d1f21, #1d1f21, #cc6666

rofi.font:                           Cantarell 11
rofi.separator-style:                none 
rofi.hide-scrollbar:                 true
rofi.sidebar-mode:                   false 
rofi.show-icons:                     true
rofi.width:                          540
rofi.height:                         315
rofi.padding:                        15
rofi.lines:                          10
rofi.bw:                             2
rofi.drun-icon-theme:                Papirus-Dark
