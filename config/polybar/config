; vim:ft=cfg

;--------------------------------------------
; colors                                    ;
;--------------------------------------------

[colors]
    background     = #1d1f21
    background-alt = #282a2e
    foreground     = #a8a8a8
    foreground-alt = #969896
    primary        = #81a2be

    info           = #8abeb7
    good           = #b5bd68
    warn           = #f0c674
    crit           = #cc6666

;--------------------------------------------
; bar/primary                                ;
;--------------------------------------------

[bar/primary]
    monitor = ${env:MONITOR:LVDS-1}

    width = 100%
    height = 24
    fixed-center = true
    line-size = 2

    background = ${colors.background}
    foreground = ${colors.foreground}

    padding-left = 2
    padding-right = 2

    module-margin-left = 2
    module-margin-right = 2

    font-0 = fixed:pixelsize=10;2
    font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
    font-2 = Noto Sans:pixelsize=10;1
    font-3 = FontAwesome:pixelsize=11;2

    modules-left = rofi-start xwindow
    modules-center = i3
    modules-right = xkeyboard temperature memory wlan volume battery date

    tray-position = right
    tray-padding = 1


[settings]
    screenchange-reload = true

[global/wm]
    margin-top = 5
    margin-bottom = 5

;--------------------------------------------
; modules                                   ;
;--------------------------------------------

[module/xwindow]
    type = internal/xwindow
    label = %title:0:34:...%

[module/xkeyboard]
    type = internal/xkeyboard
    blacklist-0 = num lock

    format-prefix = " "
    format-prefix-foreground = ${colors.foreground}

[module/i3]
    type = internal/i3
    format = <label-state> <label-mode>
    index-sort = true
    pin-workspaces = true
    wrapping-scroll = false

    label-mode = %mode%
    label-mode-padding = 3
    label-mode-foreground = ${colors.foreground}

    label-focused = %index% 
    label-focused-padding = 2
    label-focused-underline = ${colors.foreground}
    label-focused-background = ${colors.background-alt}
    label-focused-foreground = ${colors.foreground}

    label-unfocused = %index%
    label-unfocused-padding = 2
    label-unfocused-background = ${colors.background}
    label-unfocused-foreground = ${colors.foreground}

    label-visible = %index%
    label-visible-padding = 2
    label-visible-background = ${colors.background}
    label-visible-foreground = ${colors.foreground}

    label-urgent = %index%
    label-urgent-padding = 2
    label-urgent-underline = ${colors.crit}
    label-urgent-background = ${colors.background-alt}
    label-urgent-foreground = ${colors.crit}

[module/cpu]
    type = internal/cpu
    interval = 1
    format-prefix = " "
    format-prefix-foreground = ${colors.foreground}
    label = %percentage%%

[module/memory]
    type = internal/memory
    interval = 1
    format-prefix = " "
    format-prefix-foreground = ${colors.foreground}
    label = %percentage_used%%

[module/wlan]
    type = internal/network
    interface = wlp3s0
    interval = 3

    format-connected = <label-connected>
    format-connected-foreground = ${colors.foreground}
    label-connected =  %signal%%

    format-disconnected =   
    format-disconnected-foreground = ${colors.crit}

[module/eth]
    type = internal/network
    interface = enp0s3
    interval = 3

    format-connected = <label-connected>
    format-connected-foreground = ${colors.foreground}
    label-connected =  %local_ip%

    format-disconnected =  
    format-disconnected-foreground = ${colors.crit}

[module/date]
    type = internal/date
    interval = 1
    date = " %H:%M"
    date-alt = " %A, %d %B"
    label = %date% %time%

    format-prefix-foreground = ${colors.foreground-alt}

[module/volume]
    type = internal/volume

    format-volume = <ramp-volume> <label-volume>

    label-volume = %percentage%%
    label-volume-foreground = ${colors.foreground}

    label-muted = 
    label-muted-foreground = ${colors.crit}

    ramp-volume-0 = 
    ramp-volume-1 = 
    ramp-volume-2 = 

    ramp-headphones-0 = 
    ramp-headphones-1 = 

[module/battery]
    type = internal/battery
    battery = BAT1
    adapter = ADP1
    full-at = 98

    format-charging = <animation-charging> <label-charging>

    format-discharging = <ramp-capacity> <label-discharging>

    format-full-prefix = 
    format-full-padding = 1
    format-full-prefix-foreground = ${colors.foreground}

    ramp-capacity-0 = 
    ramp-capacity-1 = 
    ramp-capacity-2 = 
    ramp-capacity-3 = 
    ramp-capacity-4 = 
    ramp-capacity-foreground = ${colors.foreground}

    animation-charging-0 = 
    animation-charging-1 = 
    animation-charging-2 = 
    animation-charging-3 = 
    animation-charging-4 = 
    animation-charging-foreground = ${colors.foreground}
    animation-charging-framerate = 750

[module/temperature]
    type = internal/temperature
    thermal-zone = 0
    warn-temperature = 70

    format = <label>
    format-warn = <label-warn>

    label =  %temperature-c%
    label-warn =  %temperature-c%
    label-warn-foreground = ${colors.crit}

[module/rofi-start]
    type = custom/text

    content = 
    content-padding = 1
    content-foreground = ${colors.foreground}

    click-left = "rofi -show combi -modi combi"
